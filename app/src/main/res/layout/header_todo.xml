<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_gravity = "center"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius = "0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addImgView"
                android:src="@drawable/add_rect_icon"
                android:contentDescription="@string/content_desc"/>

            <com.and.lovelivesmatter.customviews.RobotoLightEditText
                android:id="@+id/expectationEdtTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/header_edt_txt_color"
                android:background="@drawable/text_field_line_header_todo"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/add_to_do"
                android:textColorHint="@color/header_edt_txt_color"/>

            <com.and.lovelivesmatter.customviews.ArapeyRegularButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_button_bg"
                android:textColor="@color/white"
                android:id="@+id/addBtn"
                android:text="@string/add"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textAllCaps="false"
                android:textSize="13sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>