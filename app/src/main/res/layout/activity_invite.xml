<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/signup_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:fitsSystemWindows="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/content_desc"
                    android:layout_gravity="center"
                    android:id="@+id/crossImgView"
                    android:src="@drawable/cross_icon"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal">

                <com.and.lovelivesmatter.customviews.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_partner"
                    android:background="@drawable/select_relationship_line"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="22dp"/>

                <com.and.lovelivesmatter.customviews.RobotoLightEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="@string/first_name"
                    android:ems="10"
                    android:id="@+id/firstNameEditTxt"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:background="@drawable/edt_txt_selector"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="13sp"
                    android:textColor="@color/sign_up_txt_color"
                    android:textColorHint="@color/sign_up_txt_color"/>

                <com.and.lovelivesmatter.customviews.RobotoLightEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="@string/last_name"
                    android:ems="10"
                    android:id="@+id/lastNameEditTxt"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:background="@drawable/edt_txt_selector"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13sp"
                    android:textColor="@color/sign_up_txt_color"
                    android:textColorHint="@color/sign_up_txt_color"/>

                <com.and.lovelivesmatter.customviews.RobotoLightEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/location"
                    android:id="@+id/locationEdtTxt"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:background="@drawable/text_field_line"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:textSize="13sp"
                    android:textColor="@color/sign_up_txt_color"
                    android:textColorHint="@color/sign_up_txt_color"/>

                <com.and.lovelivesmatter.customviews.ArapeyRegularButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite"
                    android:textAllCaps="false"
                    android:id="@+id/inviteBtn"
                    android:textSize="15sp"
                    android:layout_marginTop="22dp"
                    android:textColor="@color/landing_btn_txt_color"
                    android:background="@drawable/next_button_bg"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/content_desc"
                    android:layout_gravity="center"
                    android:id="@+id/addImgView"
                    android:src="@drawable/add_floting_icon"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>