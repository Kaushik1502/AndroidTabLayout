<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatarImgView"
        android:contentDescription="@string/content_desc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.and.lovelivesmatter.customviews.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userNameTxtView"
                android:textSize="13sp"
                android:textColor="@color/menu_txt_color"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bodyTxtView"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:textSize="13sp"
                android:textColor="@color/notification_body_txt_color"/>

        </LinearLayout>

        <com.and.lovelivesmatter.customviews.RobotoLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeTxtView"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/notification_time_txt_color"/>

    </LinearLayout>
</LinearLayout>