<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/moments_bg">

    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_gravity = "center"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius = "0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.and.lovelivesmatter.customviews.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromMeAgreedNoTxtView"
                android:text="15"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/serial_no_love_diary_txt_color"
                android:textSize="13sp"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/expectations_from_me"
                android:textSize="12sp"
                android:textColor="@color/menu_txt_color"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agreed"
                android:layout_gravity="center_vertical"
                android:textColor="@color/menu_txt_color"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/agreed_met_icon"
                android:contentDescription="@string/content_desc"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_gravity = "center"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius = "0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.and.lovelivesmatter.customviews.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromMeDisagreedNoTxtView"
                android:text="10"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/serial_no_love_diary_txt_color"
                android:textSize="13sp"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/expectations_from_me"
                android:textSize="12sp"
                android:textColor="@color/menu_txt_color"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disagreed"
                android:layout_gravity="center_vertical"
                android:textColor="@color/menu_txt_color"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/disagreed_notmet_icon"
                android:contentDescription="@string/content_desc"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_gravity = "center"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius = "0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.and.lovelivesmatter.customviews.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pendingNoTxtView"
                android:text="5"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/serial_no_love_diary_txt_color"
                android:textSize="13sp"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/expectations_love_diary"
                android:textSize="12sp"
                android:textColor="@color/menu_txt_color"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pending_icon"
                android:contentDescription="@string/content_desc"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_gravity = "center"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius = "0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.and.lovelivesmatter.customviews.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromPartnerAgreedNoTxtView"
                android:text="17"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/serial_no_love_diary_txt_color"
                android:textSize="13sp"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/expectations_love_diary"
                android:textSize="12sp"
                android:textColor="@color/menu_txt_color"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/met"
                android:layout_gravity="center_vertical"
                android:textColor="@color/menu_txt_color"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/agreed_met_icon"
                android:contentDescription="@string/content_desc"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_gravity = "center"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius = "0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.and.lovelivesmatter.customviews.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromPartnerDisagreedNoTxtView"
                android:text="8"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/serial_no_love_diary_txt_color"
                android:textSize="13sp"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/expectations_love_diary"
                android:textSize="12sp"
                android:textColor="@color/menu_txt_color"/>

            <com.and.lovelivesmatter.customviews.RobotoLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_met"
                android:layout_gravity="center_vertical"
                android:textColor="@color/menu_txt_color"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/disagreed_notmet_icon"
                android:contentDescription="@string/content_desc"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>